  {
  "compilerOptions": {
    "baseUrl": ".", 
    "paths": {
      "@core/*": ["core/*"],
      "@core/set-up/*": ["core/set-up/*"], 
      "@core/configuration/*": ["core/configuration/*"], 
      "@pages/*": ["page_objects/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["es2020", "dom"],
    "outDir": "./dist",
    "types": ["mocha", "node", "chai", "@wdio/globals"]
  },
  "include": [
    "core/**/*",
    "page_objects/**/*",
    "tests/**/*",
    "wdio.conf.ts"
  ],
  "exclude": ["node_modules"]
}
